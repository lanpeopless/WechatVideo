page {
    background-color: #1e0a18;
}

.login-img {
    width: 750rpx;
}

/*表单内容*/
.inputView {
    background-color: #1e0a18;
    color: whitesmoke;
    line-height: 45px;
}

/*输入框*/
.nameImage, .keyImage {
    margin-left: 22px;
    width: 20px;
    height: 20px;
}

.loginLabel {
    margin: 15px 15px 15px 10px;
    color: gray;
    font-size: 15px;
}

.inputText {
    float: right;
    text-align: right;
    margin-right: 22px;
    margin-top: 11px;
    font-size: 15px;
}

.line {
    width: 100%;
    height: 1px;
    background-color: gainsboro;
    margin-top: 1px;
}

/*按钮*/
.loginBtn {
    width: 80%;
    margin-top: 35px;
}

.goLoginBtn {
    width: 80%;
    margin-top: 15px;
}
/* 模板引用样式--start */
.box {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content:space-around;
}
.btn{
  width: 200rpx;
  height: 120rpx;
  margin-top: 20rpx;
  background-color: #1e0a18;
  color: #999999;
  border-radius: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

 .btnImg{
  width: 50rpx;
  height: 50rpx;
}

.btn::after {
  border: 0; 
}
/* 模板引用样式--end */
