/**index.wxss**/
.item-container {
    position: relative;
}

.cover {
    width: 100%;
    height: 400rpx;
    display: block; 
}
.shareBtn{
    border-color: rgba(0, 0, 0, 0);
    background-color: rgba(0, 0, 0, 0);

}
button::after {
  border: none;
}
.back-img{
    display: block; 
    background-color: black;
    z-index: 100;
}
.container-image{
  width: 100%;
  height: 100%;
  z-index: 200;
}
.container{
  z-index: 300;
  position: relative;
  width:100rpx;
  margin-top: 200rpx;
}

.desc {
    margin-bottom: 10rpx;
    width:120rpx;
    display: flex;
    align-items: center;
}
.desc2 {
    width:120rpx;
    margin-bottom: 10rpx;
    display: flex;
    align-items: center;
}

.desc .right {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.desc2 .right {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.desc .faceName {
    display: flex;
    flex-direction: column;
    align-items: center;
    
    
}

.desc2 .faceName {
    display: flex;
    flex-direction: column;
    align-items: center;
    
    margin-left: 10px;
}

.title {
    font-size: 30rpx;
    margin-top: 10rpx;
    margin-left: 20rpx;
    width: 600rpx;
}

.myface {
    display: block;
    width: 80rpx;
    height: 80rpx;
    border-radius: 100rpx;
    margin-top: 10rpx;
    margin-right: 20rpx;
}
.other {
    display: block;
    width: 60rpx;
    height: 60rpx;
    margin-right: 20rpx;
    margin-top: 10rpx;
}
.search {
    width: 60rpx;
    height: 60rpx;
    z-index: 300;
    position: absolute;
    margin-left: 30rpx; 
    margin-top: 20rpx;
}
.search1 {
    width: 60rpx;
    height: 60rpx;
    z-index: 300;
    position: absolute;
}
.videoDesc{
    z-index: 200;
    width: 100%;
    position: absolute;
    margin: 0 auto;
    text-align: center;
    margin-top: 30rpx; 
    color: rgba(255, 255, 255, 1);
}
.addBtn {
    display: block;
    width: 35rpx;
    height: 35rpx;
    border-radius: 100rpx;
    margin-top: -18rpx;
    margin-right: 26rpx;
}

.nickname {
    font-size: 20rpx;
    margin-top: 6rpx;
    margin-right: 20rpx;
    color: darkgray;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
